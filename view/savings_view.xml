<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- TRANSACTION TYPE -->
        <record id="transaction_type_form_view" model="ir.ui.view">
            <field name="name">Transaction Type Form</field>
            <field name="model">transaction.type</field>
            <field name="arch" type="xml">
                <form string="transaction_type_form">
                    <sheet>
                        <group>
                            <field name="code"/>
                            <field name="name"/>
                            <field name="type"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="transaction_type_tree_view" model="ir.ui.view">
            <field name="name">Transaction Type Tree</field>
            <field name="model">transaction.type</field>
            <field name="arch" type="xml">
                <tree string="transaction_type_tree">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="type"/>
                </tree>
            </field>
        </record>

        <record id="act_transaction_type" model="ir.actions.act_window">
            <field name="name">Transaction Type</field>
            <field name="res_model">transaction.type</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!-- END TRANSACTION TYPE -->



        <!-- SAVINGS TRANSACTION -->
        <record id="savings_trans_form_view" model="ir.ui.view">
            <field name="name">Savings Transaction Form</field>
            <field name="model">savings.trans</field>
            <field name="arch" type="xml">
                <form string="savings_trans_form">
                    <header>
                        <button name="trans_paid" string="Paid" type="object" class="oe_highlight" confirm="has the customer paid?" states="open" />
                        <button name="trans_corection" string="Corection" type="object" class="oe_highlight" states="paid" />
                        <field name="state" widget="statusbar" statusbar_visible="new,open,openbilling,paid,posted"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="saving_trans_id" class="oe_edit_only" string="Transaction Number" />
                            <h1>
                                <field name="saving_trans_id"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="date"/>
                                <field name="date_billing"/>
                                <field name="date_paid"/>
                                <!-- <field name="date_month" readonly="True"/>
                                <field name="date_year" readonly="True"/> -->
                                <field name="account_number_id"/>
                                <field name="trans_type_id" options='{"create":False,"create_edit": False,"no_open": True}' />
                                <field name="saving_method" />
                                <!-- <field name="endofday_id" readonly="True"/> -->
                                <field name="balance_ssk" attrs="{'invisible': [('saving_method','!=','withdrawal')]}"/>
                                <field name="debit" attrs="{'invisible': [('saving_method','!=','deposit')]}"/>
                                <field name="credit" attrs="{'invisible': [('saving_method','!=','withdrawal')]}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- DEPOSIT FORM -->
        <record id="act_deposit_view" model="ir.actions.act_window">
            <field name="name">Savings Deposit Form</field>
            <field name="res_model">savings.trans</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="savings_trans_form_view"/>
            <field name="context">{'default_saving_method': 'deposit'}</field>
        </record>
        <!-- END DEPOSIT FORM -->

        <!-- WITHDRAWAL FORM -->
        <record id="act_withdrawal_view" model="ir.actions.act_window">
            <field name="name">Savings Withdrawal Form</field>
            <field name="res_model">savings.trans</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="savings_trans_form_view"/>
            <field name="context">{'default_saving_method': 'withdrawal'}</field>
        </record>
        <!-- END WITHDRAWAL FORM -->


        <record id="savings_trans_tree_view" model="ir.ui.view">
            <field name="name">Savings Transaction Tree</field>
            <field name="model">savings.trans</field>
            <field name="arch" type="xml">
                <tree string="savings_trans_tree">
                    <field name="saving_trans_id"/>
                    <field name="date"/>
                    <field name="account_number_id"/>
                    <field name="debit"/>
                    <field name="credit"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <!-- END SAVINGS TRANSACTION -->

        <!-- WIZARD CORECTION FORM -->
        <record id="corection_trans_view" model="ir.ui.view">
            <field name="name">Corection Transaction Form</field>
            <field name="model">corection.deposit_withdrawal</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="savings_trans_form">
                    <sheet>
                        <div class="oe_title">
                            <label for="saving_corection_id" class="oe_edit_only" string="Corection ID" />
                            <h1>
                                <field name="corection_id" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="savings_trans_id"/>

                            </group>
                            <field name="description"/>
                        </group>

                        <footer>
                            <button string="Cancel" special="cancel" class="oe_highlight"/>
                            <button name="request_corection" string="Request Corection" type="object" class="oe_highlight" />
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_view_wizard_corection" model="ir.actions.act_window">
            <field name="name">Corection</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">corection.deposit_withdrawal</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="corection_trans_view"/>
            <field name="target">new</field>
        </record>
        <!-- END WIZARD CORECTION FORM -->


        <!-- CORECTION TREE VIEW -->
        <record id="corection_tree_view" model="ir.ui.view">
            <field name="name">Corection Tree</field>
            <field name="model">corection.deposit_withdrawal</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="corection_tree">
                    <field name="corection_id"/>
                    <field name="savings_trans_id"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>
        <record id="act_corection_tree" model="ir.actions.act_window">
            <field name="name">Corection</field>
            <field name="res_model">corection.deposit_withdrawal</field>
            <field name="view_type">tree</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="corection_tree_view"/>
        </record>
        <!-- END CORECTION TREE VIEW -->


        <record id="act_saving_trans" model="ir.actions.act_window">
            <field name="name">Savings Transaction</field>
            <field name="res_model">savings.trans</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!-- END TRANSACTION TYPE -->


          <!-- SAVINGS ACCOUNT -->
        <record id="savings_account_form_view" model="ir.ui.view">
            <field name="name">Savings Account Form</field>
            <field name="model">savings.account</field>
            <field name="arch" type="xml">
                <form string="savings_account_form">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="active,notactive"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="account_number" class="oe_edit_only" string="Account Number" />
                            <h1>
                                <field name="account_number"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="name" />
                                <field name="interest"/>
                            </group>

                            <group>
                                <field name="balance" />
                                <field name="debit" />
                                <field name="credit" />
                            </group>
                        </group>
                        <notebook>
                           <page string="Savings">
                                <field name="savings_list_id">
                                    <tree string="Savings List" create="true" edit="false" delete="false">
                                        <field name="date"/>
                                        <field name="trans_type_id"/>
                                        <field name="debit"/>
                                        <field name="credit"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                           </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="savings_account_tree_view" model="ir.ui.view">
            <field name="name">Savings Account Tree</field>
            <field name="model">savings.account</field>
            <field name="arch" type="xml">
                <tree string="savings_account_tree">
                    <field name="account_number"/>
                    <field name="name"/>
                    <field name="interest"/>
                </tree>
            </field>
        </record>

        <record id="act_saving_account" model="ir.actions.act_window">
            <field name="name">Savings Account</field>
            <field name="res_model">savings.account</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!-- END SAVINGS ACCOUNT -->


        <!-- END OF DAY -->
        <record id="endofday_form_view" model="ir.ui.view">
            <field name="name">End Of Day Form</field>
            <field name="model">endof.day</field>
            <field name="arch" type="xml">
                <form string="end_of_day_form">
                    <header>
                        <button name="trans_re_open" string="Re-Open" type="object" class="oe_highlight" confirm="Are you sure to Re-Open...?" states="posted" />
                        <button name="trans_post" string="Posted" type="object" class="oe_highlight" confirm="Are you sure you have checked the cash income, which is the same as the one on the end of day?" states="open" />
                        <field name="state" widget="statusbar" statusbar_visible="new,open,posted"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="endofday"/>
                                <field name="date_endofday" />
                                <field name="balance"/>
                            </group>

                        </group>
                        <notebook>
                           <page string="Savings">
                                <field name="savings_list_id">
                                    <tree string="Savings List" create="true" edit="false" delete="false">
                                        <field name="date" />
                                        <field name="trans_type_id" />
                                        <field name="account_number_id" />
                                        <field name="debit" />
                                        <field name="credit" />
                                        <field name="state" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="endofday_tree_view" model="ir.ui.view">
            <field name="name">End Of Day Tree</field>
            <field name="model">endof.day</field>
            <field name="arch" type="xml">
                <tree string="endofday_tree">
                    <field name="date_endofday"/>
                </tree>
            </field>
        </record>

        <record id="act_endofday" model="ir.actions.act_window">
            <field name="name">End Of Day</field>
            <field name="res_model">endof.day</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!-- END OF DAY -->

    </data>
</odoo>