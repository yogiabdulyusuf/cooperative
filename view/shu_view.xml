<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- SHU Allocated -->
        <record id="form_view_shu_allocated" model="ir.ui.view">
            <field name="name">SHU Allocated</field>
            <field name="model">shu.allocated</field>
            <field name="arch" type="xml">
                <form string="Form SHU Allocated">
                    <sheet>
                        <group>
                            <group>
                                <field name="year_shu"/>
                                <field name="date"/>
                                <field name="amount"/>
                            </group>
                            <group>
                                <field name="loan_services_percen"/>
                                <field name="purchase_service_percen" />
                                <field name="savings_services_percen" />
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="loan_services" readonly="True"/>
                                <field name="purchase_service" readonly="True"/>
                                <field name="savings_services" readonly="True"/>
                            </group>
                            <group>
                                <field name="debit" readonly="True"/>
                                <field name="credit" readonly="True"/>
                                <field name="debit_and_credit" readonly="True"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="tree_view_shu_allocated" model="ir.ui.view">
            <field name="name">SHU Allocated</field>
            <field name="model">shu.allocated</field>
            <field name="arch" type="xml">
                <tree string="Tree SHU Allocated">
                    <field name="year_shu"/>
                    <field name="date"/>
                </tree>
            </field>
        </record>

        <record id="act_shu_allocated" model="ir.actions.act_window">
            <field name="name">SHU Allocated</field>
            <field name="res_model">shu.allocated</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!-- End SHU Allocated -->

        <!-- journal shu -->
        <record id="form_view_journal_shu" model="ir.ui.view">
            <field name="name">Journal SHU</field>
            <field name="model">journal.shu</field>
            <field name="arch" type="xml">
                <form string="Form Journal SHU">
                    <header>
                        <button name="process_shu" string="Process SHU" type="object" class="oe_highlight" confirm="Are you sure to Process SHU...?" states="open" />
                        <field name="state" widget="statusbar" statusbar_visible="new,done"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="date"/>
                            <field name="shuallocated_id"/>
                        </group>
                        <field name="savings_trans_id">
                            <tree string="SHU List" create="true" edit="false" delete="false">
                                <field name="date"/>
                                <field name="trans_type_id"/>
                                <field name="debit"/>
                                <field name="credit"/>
                                <field name="state"/>
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="tree_view_journal_shu" model="ir.ui.view">
            <field name="name">Journal SHU</field>
            <field name="model">journal.shu</field>
            <field name="arch" type="xml">
                <tree string="Tree Journal SHU">
                    <field name="date"/>
                    <field name="shuallocated_id"/>
                </tree>
            </field>
        </record>

        <record id="act_journal_shu" model="ir.actions.act_window">
            <field name="name">Journal SHU</field>
            <field name="res_model">journal.shu</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>