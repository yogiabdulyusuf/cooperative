<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- LONG DEPOSITS -->
        <record id="view_billing_periode_form" model="ir.ui.view">
           <field name="name">billing.periode.form</field>
           <field name="model">billing.periode</field>
           <field name="arch" type="xml">
               <form string="Billing Periode">
                   <sheet>
                       <group>
                            <field name="name"/>
                       </group>
                       <notebook>
                           <page string="Lines">
                               <field name="line_ids">
                                   <tree>
                                       <field name="name"/>
                                       <field name="start_date"/>
                                       <field name="end_date"/>
                                       <field name="state"/>
                                   </tree>
                               </field>
                           </page>
                       </notebook>
                   </sheet>
               </form>
           </field>
        </record>

        <record id="view_billing_periode_tree" model="ir.ui.view">
            <field name="name">billing.periode.tree</field>
            <field name="model">billing.periode</field>
            <field name="arch" type="xml">
                <tree string="Billing Periode">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="act_billing_periode" model="ir.actions.act_window">
            <field name="name">Periode</field>
            <field name="res_model">billing.periode</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!-- END LONG DEPOSIT -->

        <record id="billing_trans_line" model="ir.ui.view">
            <field name="name">Billing Periode Line</field>
            <field name="model">billing.periode.line</field>
            <field name="arch" type="xml">
                <form string="Form Billing">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="billing_id"/>
                            </group>
                            <group>
                                <field name="start_date"/>
                                <field name="end_date"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Billing Loan">
                                <field name="loan_trans_id">
                                    <tree string="Loan Trans Line" create="0" edit="0" delete="0">
                                        <field name="name"/>
                                        <field name="due_date"/>
                                        <field name="installment_amount"/>
                                        <field name="interest_amount"/>
                                        <field name="installment_total"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>