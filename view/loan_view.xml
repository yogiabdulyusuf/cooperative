<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- LOAN TYPE -->
        <record id="loan_type_form_view" model="ir.ui.view">
           <field name="name">Loan Type Form</field>
           <field name="model">loan.type</field>
           <field name="arch" type="xml">
               <form string="loan_type_form">
                   <sheet>
                       <group>
                           <group>
                                <field name="name"/>
                                <field name="maximum_amount"/>
                                <field name="iface_agunan"/>
                                <field name="agunan_amount" attrs="{'invisible':[('iface_agunan','=',False)],'required':[('iface_agunan','=', True)]}"/>
                           </group>
                           <group>
                                <field name="payment_option"/>
                                <field name="interest_type"/>
                                <field name="interest_percentage"/>
                           </group>
                       </group>
                   </sheet>
               </form>
           </field>
        </record>

        <record id="loan_type_tree_view" model="ir.ui.view">
            <field name="name">Loan Type Tree</field>
            <field name="model">loan.type</field>
            <field name="arch" type="xml">
                <tree string="loan_type_tree">
                    <field name="name"/>
                    <field name="maximum_amount"/>
                    <field name="interest_type"/>
                    <field name="interest_percentage"/>
                    <field name="iface_agunan"/>
                </tree>
            </field>
        </record>

        <record id="act_loan_type" model="ir.actions.act_window">
            <field name="name">Loan Type</field>
            <field name="res_model">loan.type</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!-- END LOAN TYPE -->


        <!-- LOAN TRANSACTION -->
        <record id="loan_trans_form_view" model="ir.ui.view">
            <field name="name">Loan Trans Form</field>
            <field name="model">loan.trans</field>
            <field name="arch" type="xml">
                <form string="loan_trans_form">
                    <header>
                        <button name="trans_request" String="Request for Review" type="object" class="oe_highlight"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,request,review,approve,reject,done"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="trans_number" class="oe_edit_only" string="Transaction Number" />
                            <h1>
                                <field name="trans_number"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="member_id"/>
                                <field name="loan_type_id"/>
                            </group>
                            <group>
                                <field name="date"/>
                                <field name="estimate_start_date"/>
                            </group>
                            <group>
                                <field name="amount"/>
                                <field name="installment_number"/>
                            </group>
                        </group>
                        <field name="loan_trans_line">
                            <tree string="Loan Trans Line" create="0" edit="0" delete="0">
                                <field name="sequence"/>
                                <field name="name"/>
                                <field name="due_date"/>
                                <field name="installment_amount"/>
                                <field name="interest_amount"/>
                                <field name="installment_total"/>
                                <field name="state"/>
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="loan_trans_tree_view" model="ir.ui.view">
            <field name="name">Loan Trans Tree</field>
            <field name="model">loan.trans</field>
            <field name="arch" type="xml">
                <tree string="loan_trans_tree">
                    <field name="trans_number"/>
                    <field name="date"/>
                    <field name="loan_type_id"/>
                    <field name="estimate_start_date"/>
                    <field name="amount"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="act_loan_trans" model="ir.actions.act_window">
            <field name="name">Loan Trans</field>
            <field name="res_model">loan.trans</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!-- END LOAN TRANSACTION -->

        <!-- LOAN TRANSACTION FORM FRONT OFFICE-->
        <record id="act_loan_trans_view_front_office" model="ir.actions.act_window">
            <field name="name">Loan Transaction Form</field>
            <field name="res_model">loan.trans</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="loan_trans_form_view"/>
        </record>
        <!-- END LOAN TRANSACTION FORM FRONT OFFICE -->


    </data>
</odoo>