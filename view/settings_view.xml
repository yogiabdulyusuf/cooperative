<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

       <!-- Inherit Form View to Modify it -->
       <record id="res_company_settings" model="ir.ui.view">
           <field name="name">Res Company Settings</field>
           <field name="model">res.company</field>
           <field name="inherit_id" ref="base.view_company_form"/>
           <field name="arch" type="xml">

               <xpath expr="//notebook" position="inside">
                   <!-- Add your fields or attributes here -->
                   <page string="Settings">
                        <group>
                            <group>
                                <field name="principal_savings" />
                                <field name="mandatory_savings" />
                            </group>
                            <group>
                                <field name="principal_savings_trans_type_id" />
                                <field name="mandatory_savings_trans_type_id" />
                                <field name="voluntary_savings_trans_type_id" />
                            </group>
                            <group>
                                <field name="account_company_id" />
                                <field name="account_cash_id"/>
                                <field name="jurnal_endofday_id" />
                            </group>
                        </group>
                    </page>

               </xpath>

           </field>
       </record>
    </data>
</odoo>